# Server
PORT=5001
CORS_ORIGIN=http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/museai
JWT_SECRET=dev-secret-change-me

# OpenAI (optional; fallback heuristic used if empty)
OPENAI_API_KEY=

# Media directory to serve static audio files at /media (optional)
# If blank, defaults to server/media
MEDIA_DIR=

# Spotify OAuth (optional; needed for Spotify integration)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Production redirect URI (register this in Spotify)
SPOTIFY_REDIRECT_URI=
# Development/local redirect URI (register this in Spotify too)
SPOTIFY_REDIRECT_URI_DEV=http://localhost:5001/api/spotify/callback
# Choose which to use by default: development | production
SPOTIFY_ENV=development

# Optional local HTTPS (stable custom hostname)
# Mode options: off | manual | auto
# - manual: provide HTTPS_KEY_PATH and HTTPS_CERT_PATH
# - auto: attempt to generate and trust a local cert for HTTPS_HOSTNAME via devcert
HTTPS_MODE=off
HTTPS_KEY_PATH=
HTTPS_CERT_PATH=
HTTPS_HOSTNAME=museai.local
